<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_day01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="day01"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_day02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="day02"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_day01" />

    <Button
        android:id="@+id/btn_day03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="day03"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_day02" />

    <Button
        android:id="@+id/btn_day04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="day04"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_day03" />

    <Button
        android:id="@+id/btn_day05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="day05"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_day04" />


</android.support.constraint.ConstraintLayout>