<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/wechat"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/umeng_socialize_wechat" />

    <ImageView
        android:id="@+id/qq"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/umeng_socialize_qq" />

    <ImageView
        android:id="@+id/sina"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/umeng_socialize_sina"
        app:layout_constraintLeft_toRightOf="@+id/qq" />

    <ImageView
        android:id="@+id/wechat2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/wechat"
        android:src="@drawable/umeng_socialize_wechat" />

    <ImageView
        android:id="@+id/qq2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="15dp"
        android:src="@drawable/umeng_socialize_qq"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/qq"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/sina2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/umeng_socialize_sina"
        app:layout_constraintLeft_toRightOf="@+id/qq2"
        app:layout_constraintTop_toBottomOf="@id/sina"/>

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="dsfg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/wechat2" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_icon"
        app:layout_constraintTop_toBottomOf="@id/txt"
        android:src="@drawable/red"/>

</android.support.constraint.ConstraintLayout>