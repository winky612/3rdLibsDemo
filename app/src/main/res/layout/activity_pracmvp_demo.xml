<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.Guideline
        android:id="@+id/gl_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.3" />

    <TextView
        android:id="@+id/tv_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ID"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/gl_start"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edt_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="id"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_id"
        app:layout_constraintLeft_toRightOf="@id/gl_start"
        app:layout_constraintRight_toRightOf="parent" />


    <EditText
        android:id="@+id/edt_fn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="first name"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_fn"
        app:layout_constraintLeft_toRightOf="@id/gl_start"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edt_id" />

    <TextView
        android:id="@+id/tv_fn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="FirstName"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/edt_fn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/gl_start"
        app:layout_constraintTop_toBottomOf="@id/tv_id" />

    <EditText
        android:id="@+id/edt_ln"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="last name"
        app:layout_constraintLeft_toRightOf="@id/gl_start"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edt_fn" />

    <TextView
        android:id="@+id/tv_ln"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="last name"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/edt_ln"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/gl_start"
        app:layout_constraintTop_toBottomOf="@id/tv_fn" />


    <Button
        android:id="@+id/btn_write"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="write"
        app:layout_constraintLeft_toRightOf="@id/gl_start"
        app:layout_constraintTop_toBottomOf="@id/edt_ln" />

    <Button
        android:id="@+id/btn_read"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="read"
        app:layout_constraintBaseline_toBaselineOf="@id/btn_write"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tv_fn"
        app:layout_constraintTop_toBottomOf="@id/tv_ln" />

</android.support.constraint.ConstraintLayout>